#include <stdio.h>

int main() {
    int arr[] = {1, 2, 3, 4, 5};
    int size = sizeof(arr) / sizeof(arr[0]);
    
    int last = arr[size - 1];  // Step 1: Store last element

    // Step 2: Shift elements to the right
    for (int i = size - 1; i > 0; i--) {
        arr[i] = arr[i - 1];
    }

    // Step 3: Place last element at the beginning
    arr[0] = last;

    // Print the rotated array
    printf("Array after rotating by 1: ");
    for (int i = 0; i < size; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}
