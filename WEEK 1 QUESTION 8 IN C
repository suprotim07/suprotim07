#include <stdio.h>
#include <string.h>

int main() {
    char str[100] = "madam";  // You can change this string
    int len = strlen(str);
    int isPalindrome = 1;  // Assume it is a palindrome

    for (int i = 0; i < len / 2; i++) {
        if (str[i] != str[len - i - 1]) {
            isPalindrome = 0;  // Mismatch found
            break;
        }
    }

    if (isPalindrome)
        printf("The string is a palindrome.\n");
    else
        printf("The string is NOT a palindrome.\n");

    return 0;
}
